<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleComment_post_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:text="Title"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/item_icon"
        android:layout_toEndOf="@+id/item_icon"
        android:padding="5dp"/>

    <TextView android:id="@+id/description_post_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleComment_post_list"
        android:layout_toRightOf="@+id/item_icon"
        android:layout_toEndOf="@+id/item_icon"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textStyle="bold"
        android:padding="2dp"/>
    <TextView android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_post_list"
        android:text="autor"
        android:textStyle="bold"
        android:padding="2dp"/>

    <TextView android:id="@+id/dateComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_post_list"
        android:layout_alignEnd="@+id/description_post_list"
        android:text="Date"
        android:textStyle="bold"
        android:padding="2dp"/>



</RelativeLayout>